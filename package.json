{
  "name": "issho-ni",
  "version": "0.0.1",
  "description": "",
  "author": "Arjo Bruijnes <arjo@weirdwater.net>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"**/*.ts\"",
    "views": "copyfiles server/views/* dist/",
    "start": "ts-node -r tsconfig-paths/register server/main.ts",
    "start:dev": "concurrently --handle-input \"wait-on dist/server/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:debug": "nodemon --config nodemon-debug.json",
    "build:style-typings": "node ./scripts/generate-style-typings.js",
    "build:prod": "rimraf dist && yarn build && yarn views",
    "start:prod": "node dist/server/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/platform-socket.io": "^6.3.1",
    "@nestjs/typeorm": "^6.1.2",
    "@nestjs/websockets": "^6.3.1",
    "@sentry/browser": "^5.4.3",
    "@sentry/node": "^5.4.3",
    "bcrypt": "^3.0.6",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.9.1",
    "dotenv": "^8.0.0",
    "freeice": "^2.2.2",
    "hbs": "^4.0.4",
    "immutable": "^4.0.0-rc.12",
    "joi": "^14.3.1",
    "js-cookie": "^2.2.0",
    "nest-raven": "^4.0.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^7.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "socket.io-client": "^2.2.0",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.5.0",
    "@nestjs/testing": "^6.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.0",
    "@types/immutable": "^3.8.7",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.3.3",
    "@types/js-cookie": "^2.2.2",
    "@types/node": "^10.12.18",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "copyfiles": "^2.1.0",
    "css-loader": "^2.1.1",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.7.0",
    "node-sass": "^7.0.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-loader": "^6.0.1",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.16.0",
    "typed-css-modules": "^0.5.1",
    "typescript": "3.4.3",
    "wait-on": "^3.2.0",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-shell-plugin": "^0.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
